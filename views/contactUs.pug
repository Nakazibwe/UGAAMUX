    body
        // Code for the top navigation bar
        nav#top-navbar.navbar.navbar-expand-lg.navbar-dark
            .container-fluid
                a#navbar-logo.navbar-brand(href='/')
                    small#small-log UGAA
                    | MUX
                    img#logopicture(src='/imagefiles/ugflag.jpeg' alt='UG-LOGO' height='30px' width='50px')
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarNavAltMarkup.collapse.navbar-collapse
                    #navbar-inner-div.navbar-nav
                        a#navbar-home.nav-link(href='/') Home
                        a#navbar-aboutus.nav-link.active(aria-current='page' href='/aboutUs')
                            | About
                            | Us
                        a#navbar-artistes.nav-link(href='/artists') Artists
                        a#navbar-bands.nav-link(href='/bands') Bands
                        a#navbar-comedians.nav-link(href='/comedians') Comedians
                        a#navbar-contactus.nav-link(href='/contactinfo/contactUs') Contact Us
        // Code for the header section
        #header.container-fluid
            // Code for the inner text box inside the header section
            .header-text-area
                h1 Contact Us
                small#small-header-quote Ugandan Talent Lives Here!!!
        .container
            .row 
                .col-lg-4.contacts.contact-info
                    .form-action
                        h2#contactus-heading Contact Us
                        h2 Location
                        p 13th Street Nansana, Wamala.
                        h2 Email Us
                        p info@ugaamux.com
                        h2 Call Us
                        p +256-414-674-867
                        p +256-774-869-821
                        p +256-702-481-032
                .col-lg-7.contacts.contact-input
                    form#form-id(action='/contactinfo/contactUs' method='POST' name='contactUsform')
                        .form-action
                            label#firstnamelabel(for='inputfirstname')  First Name
                            label#last-name-label(for='inputlastname')  Last Name
                            .inner-flex
                                input#inputfirstname(type='text' name='firstname' placeholder='First Name')
                                input#inputlastname(type='text' name='lastname' placeholder=' Last Name')
                        small#firstname-error
                        small#lastname-error
                        .form-action
                            label#emaillabel(for='email')  Email
                            br
                            input#inputemail(type='text' name='email' placeholder='Enter Your Email ')
                        small#email-error
                        .form-action
                            label#messagelabel(for='email')  Message 
                            br
                            textarea#inputmessage(name='message' placeholder=' Message ')
                        small#message-error
                        .form-action
                            input#submit-contactus(type='submit' value='Submit')
        .navbar.navbar-expand-lg.navbar-dark.footer
            a.nav-link.copy(href='#') &copy 2021 Grace Nakazibwe 
            small#small-quote Ugandan Talent Lives Here
            .nav-container
                a.nav-link.icon(href='#')
                    i.fa.fa-facebook-square
                a.nav-link.icon(href='#')
                    i.fa.fa-twitter-square
                a.nav-link.icon(href='#')
                    i.fa.fa-google-plus-square
                a.nav-link.icon(href='#')
                    i.fa.fa-instagram
                a.nav-link.icon(href='#')
                    i.fa.fa-linkedin
