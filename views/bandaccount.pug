  body
    nav#top-navbar.navbar.navbar-expand-lg.navbar-dark
      .container-fluid
        a#navbar-logo.navbar-brand(href='/')
          small#small-log UGAA
          | MUX
          img#logopicture(src='/imagefiles/ugflag.jpeg' alt='UG-LOGO' height='30px' width='50px')
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNavAltMarkup.collapse.navbar-collapse
          #navbar-inner-div.navbar-nav
            .dropdown
              a#navbar-dropdown.btn.btn-secondary.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                | Account
              ul.dropdown-menu(aria-labelledby='dropdownMenuLink')
                li
                  a#sign-out.dropdown-item(href='/') LOG OUT
    .container
      .row
        .col-lg-5.photo-div
          img.img-fluid(src='/'+band.Profilepicture width = "400px" height = "600px" alt='band photo')
          .row
            a.bandgenre Genre 
              br
              | #{band.genre} 
            a.bandalbums Albums 
              br
              | #{band.albums} 
            a.bandsongs Songs 
              br
              | #{band.numberofsongs} 
        .col-lg-6.band-info
          .row.moreinformation
            h5 Band Information
            .col-lg-5.containerA
              p Band name
              p Band owner
              p Band home
              p Number of members
              p Band slogan
              p Date of formation
              p Band Telephone
              p Twitter
              p Email
              p Band crowns
              p Additional owners
              p Band sponsors
        
            .col-lg-5.containerB
            
              p #{band.BandName} 
              p #{band.BandOwner} 
              p #{band.BandHome} 
              p #{band.BandNumber} 
              p #{band.BandSlogan} 
              p #{moment(band.DateFormation).format('DD/MM/YYYY')} 
              p #{band.telephone} 
              p #{band.twitter} 
              p #{band.email} 
              p #{band.bandCrowns} 
              p #{band.ownership} 
              p #{band.bandsponsors} 
    .navbar.navbar-expand-lg.navbar-dark.footer
      a.nav-link.copy(href='#') &copy 2021 Grace Nakazibwe 
      small#small-quote Ugandan Talent Lives Here
      .nav-container
        a.nav-link.icon(href='#')
          i.fa.fa-facebook-square
        a.nav-link.icon(href='#')
          i.fa.fa-twitter-square
        a.nav-link.icon(href='#')
          i.fa.fa-google-plus-square
        a.nav-link.icon(href='#')
          i.fa.fa-instagram
        a.nav-link.icon(href='#')
          i.fa.fa-linkedin
    script(src='/javaScriptfiles/js/bootstrap.min.js')
