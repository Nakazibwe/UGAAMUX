  body
    nav#top-navbar.navbar.navbar-expand-lg.navbar-dark
      .container-fluid
        a#navbar-logo.navbar-brand(href='/')
          small#small-log UGAA
          | MUX
          img#logopicture(src='/imagefiles/ugflag.jpeg' alt='UG-LOGO' height='30px' width='50px')
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNavAltMarkup.collapse.navbar-collapse
          #navbar-inner-div.navbar-nav
            .dropdown
              a#navbar-dropdown.btn.btn-secondary.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                | Account
              ul.dropdown-menu(aria-labelledby='dropdownMenuLink')
                li
                  a#sign-out.dropdown-item(href='/') LOG OUT
    .container
      .row
        .col-lg-4.photo-div
          img.img-fluid(src='/'+comedian.uploadedpicture width = "400px" height = "600px" alt='comedian photo')
        .col-lg-7.comedian-info
          .row.moreinformation
            h5 Personal Information
            .col-lg-5.containerA
              p First name
              p Last name
              p Stage name
              p Telephone 
              p Twitter 
              p Email
              p Date of Birth 
              p Location
              p District
              p Date Comedy Began
              p Gender
        
            .col-lg-5.containerB

              p  #{comedian.firstName} 
              p  #{comedian.lastName} 
              p  #{comedian.stagename} 
              p  #{comedian.comedianphone} 
              p  #{comedian.twitter} 
              p  #{comedian.email} 
              p  #{moment(comedian.ComedianDOB).format('DD/MM/YYYY')} 
              p  #{comedian.Location} 
              p  #{comedian.Based} 
              p  #{moment(comedian.startedcomedy).format('DD/MM/YYYY')} 
              p  #{comedian.gender} 
              
    .navbar.navbar-expand-lg.navbar-dark.footer
      a.nav-link.copy(href='#') &copy 2021 Grace Nakazibwe 
      small#small-quote Ugandan Talent Lives Here
      .nav-container
        a.nav-link.icon(href='#')
          i.fa.fa-facebook-square
        a.nav-link.icon(href='#')
          i.fa.fa-twitter-square
        a.nav-link.icon(href='#')
          i.fa.fa-google-plus-square
        a.nav-link.icon(href='#')
          i.fa.fa-instagram
        a.nav-link.icon(href='#')
          i.fa.fa-linkedin
