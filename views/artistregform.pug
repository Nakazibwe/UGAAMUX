  body
    nav#top-navbar.navbar.navbar-expand-lg.navbar-dark
      .container-fluid
        a#navbar-logo.navbar-brand(href='/registrationpage')
          small#small-log UGAA
          | MUX
          img#logopicture(src='/imagefiles/ugflag.jpeg' alt='UG-LOGO' height='30px' width='50px')
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNavAltMarkup.collapse.navbar-collapse
          #navbar-inner-div.navbar-nav
            a#navbar-admin.nav-link(aria-current='page' href='/registrationpage') ADMIN
            a#navbar-artistes.nav-link(href='/artists') Artists
            a#navbar-bands.nav-link(href='/bands') Bands
            a#navbar-comedians.nav-link(href='/comedians') Comedians
            a#navbar-contactus.nav-link(href='/contactUs') Contact Us
            .dropdown
              a#navbar-dropdown.btn.btn-secondary.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                | Account
              ul.dropdown-menu(aria-labelledby='dropdownMenuLink')
                li
                  a#sign-out.dropdown-item(href='/') LOG OUT
    h4.h4regform Artist Registration
    .container
      form#form-id(action='/registerartist/artistregistrationform' method='POST' name='ArstisteRegistration')
        .row
          .col-lg-4.form-action-cols
            .form-action
              label#firstname(for='') First Name
              input#fname(type='text' name='firstName' placeholder='Enter Artist  First Name ')
            small#firstname-error.error
            .form-action
              label#lastname(for='') Last Name
              input#lname(type='text' name='lastName' placeholder='Enter  Artist  Last Name ')
            small#lastname-error.error
            .form-action
              label#stgname(for='') Stage Name
              br
              input#stgname(type='text' name='stageName' placeholder='Enter Artist Stage name')
            small#stagename-error.error
            .form-action
              label#ArtistID(for='') Artist ID
              br
              input#artist-id(type='text' name='artistID' placeholder='Enter Artist ID')
            small#artistID-error.error
            .form-action
              label#telcontact(for='') Telephone Contact(256)
              br
              input#telecontact(type='text' placeholder='Enter Artist Phone number' name='telephone')
            small#phonenumber-error.error
            .form-action
              label#socialcontact(for='') Twitter Handle
              br
              input#twitter-contact(type='text' placeholder='Enter Artist twitter handle' name='twitter')
            small#twitter-error.error
          .col-lg-4.form-action-cols
            .form-action
              label#contact(for='') Email 
              br
              input#email-contact(type='text' placeholder='Enter Artist Email' name='email')
            small#email-error.error
            .form-action
              label#DOB(for='') Date of birth
              br
              input#dob-id(max='2017-12-31' type='date' name='ArtistDOB')
            small#DOB-error.error
            .form-action
              label#based(for='') Based(District)
              br
              input#based(type='text' name='basedDistrict' placeholder='Enter district artist is based')
            small#baseddistrict-error.error
            .form-action
              label#nin(for='') National ID NIN
              br
              input#NIN-id(type='text' name='nationalIDNIN' placeholder='Enter Artist  NIN')
            small#nationalNIN-error.error
            .form-action
              label#date-started(for='') Date Began Music
              br
              input#date-started(type='date' name='datestartedsing')
            small#careerstart-error.error
            .form-action
              label#location(for='') Location
              br
              input#location(type='text' name='Location' placeholder='Enter Artist Location')
            small#loacation-error.error
          .col-lg-4.form-action-cols
            .form-action
              label#numofalbums(for='') Number of Albums
              br
              input#numalbums(type='number' name='numberofalbums')
            small#number-of-album-error.error
            .form-action
              label#numofsongs(for='') Number of Songs
              br
              input#numsongs(type='number' name='numberofsongs')
            small#number-of-song-error.error
            .form-action
              label#numofsongs(for='') Password
              br
              input#numsongs(type='password' name='password')
            small#number-of-song-error.error
            .form-action
              label#numofsongs(for='') Role
              br
              select#roles(name="role")
                option(value="default") Select a role 
                option(value="artist") Artist 
            small#number-of-song-error.error
            .form-action
              label#genre(for='') Genre
              br
              input#music-type(type='text' placeholder='Enter Artist Genre' name='genre')
            small#genre-error.error
            p#pgender Gender
            #gender-form
              span
                label#fmale(for='smale') Male
                input#smale(type='radio' name='gender' value='male')
              span
                label#fmale(for='sfemale') Female
                input#sfemale(type='radio' name='gender' value='female')
            small#gender-error.error
            .form-action 
              label#profile-photo(for='') Profile Picture
              br
              input#profile-pic(type='file' name='pictureupload')
            small#pictureupload-error.error   
            #button-form
              input#submit-btn(type='submit' name='submit-button' value='SUBMIT')
              input#cancel-btn(type='reset' name='cancel-button' value='CANCEL')
