                | Account
              ul.dropdown-menu(aria-labelledby='dropdownMenuLink')
                li
                  a#sign-out.dropdown-item(href='/') LOG OUT
    h4.h4regform Band Registration
    .container
      form#form-id(action='/registerband/bandregistrationform' method='POST' name='BandRegistration')
        .row
          .col-lg-4.form-action-cols
            .form-action
              label#bandname(for='') Band Name
              br
              input#band-name(type='text' placeholder='Enter Band Name ' name='BandName')
            small#bandname-error.error
            .form-action
              label#bandowner(for='') Band Owner
              br
              input#band-owner(type='text' placeholder=' Enter Band Owner ' name='BandOwner')
            small#bandowner-error.error
            .form-action
              label#bandhome(for='') Band Home
              br
              input#band-home(type='text' placeholder=' Enter Band Home ' name='BandHome')
            small#bandhome-error.error
            .form-action
              label#bandmembers(for='') Number of Members
              br
              input#band-numbers(type='number' name='BandNumber')
            small#bandmembers-error.error
            .form-action
              label#bandslogan(for='') Band Slogan
              br
              input#band-slogan(type='text' placeholder='Enter Band Slogan' name='BandSlogan')
            small#bandslogan-error.error
            .form-action
              label#Band-ID(for='') Band ID
              br
              input#band-id(type='text' name='bandID' placeholder='Enter Band ID')
            small#bandID-error.error
            .form-action
              label#numofsongs(for='') Number of Songs
              br
              input#numsongs(type='number' name='numberofsongs')
            small#numberofsongs-ERROR.error
          .col-lg-4.form-action-cols
            .form-action
              label#date-of-formation(for='') Date of Formation
              br
              input#date-of-formation(type='date' name='DateFormation')
            small#dateofformationERROR.error
            .form-action
              label#telcontact(for='')  Band Telephone Contact(256)
              br
              input#telecontact(type='text' placeholder='Enter Band  Phone number' name='telephone')
            small#telephone-error.error
            .form-action
              label#socialcontact(for='') Twitter Handle
              br
              input#twitter-contact(type='text' placeholder='Enter Band twitter handle' name='twitter')
            small#twitterhandle-error.error
            .form-action
              label#contact(for='') Email 
              br
              input#email-contact(type='text' placeholder='Enter Band email' name='email')
            small#email-error.error
            .form-action
              label#band-crowns(for='') Band Crowns(if any)
              br
              input#band-crowns(type='text' placeholder='Enter Band Crowns' name='bandCrowns')
            small#bandcrowns-error.error
            .form-action
              label#albums(for='') Number of Albums
              br
              input#band-albums(type='number' name='albums')
            small#albums-error.error
            .form-action
              label#genre(for='')  Genre 
              br
              input#band-genre(type='text' placeholder=' Enter Band Genre ' name='genre')
            small#genre-error.error
          .col-lg-4.form-action-cols

            .form-action
              label#passwd(for='') Password
              br
              input#userpassword(type='password' placeholder = "Create Password" name ='password')
            small#passworderror.error
            
            .form-action
              label#userrole(for='') Role
              br 
              select#roles(name="role")
                option(value="default") Select a role 
                option(value="band") Band
            small#roles-error.error
            .form-action
              label#band-icon(for='')  Band Icon 
              br
              input#Band-icon(type='file' name='icon')
            small#band-icon-error.error
            .form-action
              label#profile-pic(for='')  Profile Picture 
              br
              input#profile-photo(type='file' name='Profilepicture')
            small#profilephoto-error.error
            .form-action
              label#otherowners(for='')  Other Owners, (if any) 
              br
              textarea#Otherowners(name='ownership' placeholder='Enter Other band Owners' cols='30' rows='10')
            small#other-owners-error.error
            .form-action
              label#sponsors(for='') Band Sponsors,(if any)
              br
              textarea#band-sponsors(name='bandsponsors' placeholder='Enter Band Sponsors' cols='30' rows='10')
            small#sponsors-ERROR.error
            
            #button-form
              input#submit-btn(type='submit' name='submit-button' value='SUBMIT')
              input#cancel-btn(type='reset' name='cancel-button' value='CANCEL')
